<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="CADASTRAR PRODUTO"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/main_txtProduto"
        app:layout_constraintRight_toLeftOf="@+id/man_listProduto"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/main_txtProduto"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:ems="10"
        android:hint="PRODUTO"
        android:inputType="textPersonName"

        android:textSize="12sp"
        android:layout_marginStart="8dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/main_spinnerCategoria"
        android:layout_marginTop="54dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="51dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <EditText
        android:id="@+id/main_txtQuant"
        android:layout_width="83dp"
        android:layout_height="37dp"
        android:ems="10"
        android:hint="QUANTIDADE"
        android:inputType="textPersonName"
        android:textSize="12sp"
        android:layout_marginEnd="9dp"
        app:layout_constraintRight_toLeftOf="@+id/man_listProduto"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/main_txtProduto"
        tools:layout_constraintBaseline_creator="1" />

    <Spinner
        android:id="@+id/main_spinnerCategoria"
        android:layout_width="263dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintRight_toLeftOf="@+id/main_checkPerecivel"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="128dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <CheckBox
        android:id="@+id/main_checkPerecivel"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="PerecÃ­vel?"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/main_bntSalvar"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="@+id/main_bntSalvar"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/main_spinnerCategoria"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toLeftOf="@+id/main_bntSalvar" />

    <Button
        android:id="@+id/main_bntSalvar"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginStart="82dp"
        android:text="SALVAR"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/man_listProduto"
        android:layout_width="341dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/main_bntSalvar" />

</android.support.constraint.ConstraintLayout>